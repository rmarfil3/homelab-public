# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t sidekicks`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system sidekicks && \
          adduser --system -G sidekicks sidekicks

COPY dist/apps/sidekicks sidekicks
RUN chown -R sidekicks:sidekicks .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix sidekicks --omit=dev -f install

CMD [ "node", "sidekicks" ]
